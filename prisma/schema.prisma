generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"] // Ensures it works on Windows
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum Role {
  ADMIN
  USER
}


model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("USER") // future-proof for 2.21
  createdAt DateTime @default(now())

  projects Project[]
}

model Project {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  createdAt   DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks       Task[]
}

model Task {
  id        Int      @id @default(autoincrement())
  title     String
  status    String
  createdAt DateTime @default(now())
  projectId Int
  project   Project  @relation(fields: [projectId], references: [id])

  @@index([projectId])
  @@index([status, createdAt])
}
