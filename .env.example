# ===============================
# Server-side environment variables
# ===============================

# PostgreSQL connection string (server-only)
DATABASE_URL=postgres://username:password@host:port/dbname

# ===============================
# JWT Authentication Secrets
# ===============================

# JWT Secret for access tokens (short-lived, 15 minutes)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_here_min_32_chars

# Refresh Token Secret for long-lived tokens (7 days)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here_min_32_chars

# ===============================
# Client-side environment variables
# (Must be prefixed with NEXT_PUBLIC_)
# ===============================

# Base URL for API requests
NEXT_PUBLIC_API_BASE_URL=https://api.example.com
